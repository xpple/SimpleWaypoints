{
  "schemaVersion": 1,
  "id": "simplewaypoints",
  "version": "${version}",

  "name": "SimpleWaypoints",
  "description": "Minecraft Fabric mod providing simple client-sided waypoints.",
  "authors": [
    "xpple"
  ],
  "contact": {
    "homepage": "https://xpple.dev/",
    "sources": "https://github.com/xpple/SimpleWaypoints/"
  },

  "license": "LGPL-3.0-or-later",
  "icon": "assets/simplewaypoints/icon.png",

  "environment": "client",
  "entrypoints": {
    "client": [
      "dev.xpple.simplewaypoints.SimpleWaypoints"
    ]
  },
  "mixins": [
    "mixins.simplewaypoints.json"
  ],
  "accessWidener": "simplewaypoints.aw",

  "depends": {
    "fabricloader": ">=${loader_version}",
    "fabric-api": ">=0.128.0",
    "minecraft": "${minecraft_version_dependency}",
    "betterconfig": "*",
    "clientarguments": "*"
  }
}
